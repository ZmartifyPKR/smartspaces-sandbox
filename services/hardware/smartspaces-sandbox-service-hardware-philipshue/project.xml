	</description>

	<identifyingName>smartspaces.sandbox.service.hardware.philipshue
	</identifyingName>
	<version>1.0.0</version>

	<library>
		<container>
			<activator>
				org.robotbrains.support.internal.osgi.RobotBrainsSupportActivator
			</activator>
		</container>
	</library>

	<dependencies>
		<dependency identifyingName="smartspaces.sandbox.service.action"
			version="[1.0.0, 1.1.0)" dynamic="true" />
	</dependencies>
</project>
