<?xml version="1.0"?>
<project type="library" builder="java">
	<name>OrientDB Database Service</name>
	<description>
		A service for working with OrientDB databases.
	</description>

	<identifyingName>smartspaces.sandbox.service.database.document.orientdb
	</identifyingName>
	<version>1.0.0</version>

	<library>
		<container>
			<activator>io.smartspaces.sandbox.service.database.document.orientdb.internal.osgi.OrientDbDocumentDatabaseServiceOsgiBundleActivator
			</activator>
		</container>
	</library>

	<dependencies>
		<dependency identifyingName="com.orientechnologies.orientdb-core" version="[1.7.0, 2.2.0)"
			required="true" />
		<dependency identifyingName="com.orientechnologies.orientdb-server" version="[1.7.0, 2.2.0)"
			required="true" />
		<dependency identifyingName="com.orientechnologies.orientdb-client" version="[1.7.0, 2.2.0)"
			required="true" />
		<dependency identifyingName="com.orientechnologies.orientdb-enterprise" version="[1.7.0, 2.2.0)"
			required="true" />
	</dependencies>
</project>
